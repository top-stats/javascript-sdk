{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ES2020"], 
    "types": ["node"] 
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules", "dist", "example"]
}
